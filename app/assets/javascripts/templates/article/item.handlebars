<div class="row">
  <div class="col-xs-9 col-xs-offset-3 col-sm-10 col-sm-offset-2">
    {{#linkTo 'article' this}}
    <h3>{{title}}</h3>
    {{/linkTo}}

  </div>
</div>

<div class="row">
  <div class="col-xs-3 col-sm-2 text-center">

    {{partial 'article/date'}}

    {{#with votesCount}}
    <span class='label label-primary'>
      <span class="glyphicon glyphicon-thumbs-up"></span> {{this}}
    </span>
    {{/with}}
  </div>

  <div class="col-xs-9 col-sm-10">
    <p> {{limit body to='300'}} </p>
  </div>

</div>

